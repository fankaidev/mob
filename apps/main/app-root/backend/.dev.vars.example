# Required
PARAFLOW_SENTRY_DSN=https://fake-key@fake-sentry.invalid/999999
PARAFLOW_SENTRY_ENVIRONMENT=development

# Optional
# PARAFLOW_SENTRY_RELEASE=
# PARAFLOW_DRIZZLE_URL=postgresql://user:password@localhost:5432/dbname
# ENABLE_HTTP_LOG_DETAIL=true

# Optional Features (Authentication)
PARAFLOW_APP_ID=00ee3692-3d74-4386-8664-d9117d89ddd1
PARAFLOW_AUTH_API_URL=https://auth.paraflow.cc/api/auth

# Optional Features (AI Gateway)
