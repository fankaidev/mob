{
  "name": "backend",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/app.ts",
      "default": "./src/app.ts"
    }
  },
  "main": "./src/app.ts",
  "types": "./src/app.ts",
  "scripts": {
    "dev": "vite dev --host 0.0.0.0 --port 8787",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "codegen": "tsx scripts/codegen.ts",
    "db:try-migrate": "tsx scripts/db-try-migrate.ts",
    "db:migrate": "echo 'you MUST NOT migrate the dev environment database, pnpm test will execute migration sql during PGLite setup. If migration sql is not working as expected, double check README.md, and delete the migration sql and rewrite again'",
    "db:generate": "echo 'you MUST use pnpm codegen instead, DO NOT use drizzle-kit'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "@sentry/cloudflare": "^10.35.0",
    "@sinclair/typebox": "^0.34.48",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "isomorphic-git": "^1.37.1",
    "mime": "^4.1.0",
    "partial-json": "^0.1.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.19.0",
    "@cloudflare/workers-types": "^4.20251225.0",
    "@electric-sql/pglite": "^0.3.14",
    "@eslint/js": "^9.30.1",
    "@sentry/vite-plugin": "^4.6.0",
    "@types/ini": "^4.1.1",
    "@types/mime": "^4.0.0",
    "@types/node": "^22.14.0",
    "@types/papaparse": "^5.5.2",
    "@types/sprintf-js": "^1.1.4",
    "@types/turndown": "^5.0.6",
    "diff": "^8.0.3",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.17.0",
    "fast-xml-parser": "^5.3.5",
    "file-type": "^21.3.0",
    "globals": "^16.3.0",
    "handlebars": "^4.7.8",
    "ini": "^6.0.0",
    "minimatch": "^10.1.2",
    "openai": "^6.14.0",
    "papaparse": "^5.5.3",
    "re2js": "^1.2.1",
    "smol-toml": "^1.6.0",
    "sprintf-js": "^1.1.3",
    "tsx": "^4.21.0",
    "turndown": "^7.2.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
