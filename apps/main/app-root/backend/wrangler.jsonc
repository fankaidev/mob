{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "backend",
  "main": "src/app.ts",
  "compatibility_date": "2025-12-17",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true
  },
  // Cron trigger - runs daily at 3:00 AM UTC to cleanup expired polls
  "triggers": {
    "crons": ["0 3 * * *"]
  },

  // Sentry configuration
  // Run: wrangler secret put PARAFLOW_SENTRY_DSN
  // Run: wrangler secret put PARAFLOW_SENTRY_ENVIRONMENT
  "vars": {
    "PARAFLOW_SENTRY_DSN": "",
    "PARAFLOW_SENTRY_ENVIRONMENT": ""
  }
