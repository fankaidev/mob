<div class="flex items-center justify-center gap-2">
    <button
        hx-get="{{buildUrl '/api/htmx/audit-logs/table' page=1 pageSize=pagination.pageSize tableName=filters.tableName action=filters.action recordId=filters.recordId userId=filters.userId traceId=filters.traceId startDate=filters.startDate endDate=filters.endDate}}"
        hx-target="#audit-logs-container"
        {{#if (eq pagination.page 1)}}disabled{{/if}}
        class="px-3 py-1 text-sm border rounded disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-50"
    >
        First
    </button>
    <button
        hx-get="{{buildUrl '/api/htmx/audit-logs/table' page=pagination.prevPage pageSize=pagination.pageSize tableName=filters.tableName action=filters.action recordId=filters.recordId userId=filters.userId traceId=filters.traceId startDate=filters.startDate endDate=filters.endDate}}"
        hx-target="#audit-logs-container"
        {{#if (eq pagination.page 1)}}disabled{{/if}}
        class="px-3 py-1 text-sm border rounded disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-50"
    >
        Prev
    </button>
    <span class="text-sm text-gray-600">
        Page {{pagination.page}} of {{pagination.totalPages}}
    </span>
    <button
        hx-get="{{buildUrl '/api/htmx/audit-logs/table' page=pagination.nextPage pageSize=pagination.pageSize tableName=filters.tableName action=filters.action recordId=filters.recordId userId=filters.userId traceId=filters.traceId startDate=filters.startDate endDate=filters.endDate}}"
        hx-target="#audit-logs-container"
        {{#if (eq pagination.page pagination.totalPages)}}disabled{{/if}}
        class="px-3 py-1 text-sm border rounded disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-50"
    >
        Next
    </button>
    <button
        hx-get="{{buildUrl '/api/htmx/audit-logs/table' page=pagination.totalPages pageSize=pagination.pageSize tableName=filters.tableName action=filters.action recordId=filters.recordId userId=filters.userId traceId=filters.traceId startDate=filters.startDate endDate=filters.endDate}}"
        hx-target="#audit-logs-container"
        {{#if (eq pagination.page pagination.totalPages)}}disabled{{/if}}
        class="px-3 py-1 text-sm border rounded disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-50"
    >
        Last
    </button>
</div>
