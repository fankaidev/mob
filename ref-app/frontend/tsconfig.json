{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["./src/*"],
      "@backend/*": ["../backend/src/*"],
      "txom-frontend-libs/*": ["../txom-frontend-libs/src/*"],
      "txom-frontend-libs": ["../txom-frontend-libs/src/index.ts"],
    },
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "incremental": true
  },
  "include": ["src/**/*", "tests/**/*", "../backend/src/hbs.d.ts", "../txom-frontend-libs/src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
