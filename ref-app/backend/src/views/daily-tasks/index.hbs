<div class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Daily Tasks Management</h1>

    <!-- Registered Tasks Partial -->
    {{> daily-tasks/_tasks }}

    <!-- Run Tasks Form -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Run Daily Tasks</h2>
        <form hx-post="/api/htmx/daily-tasks/run"
              hx-target="#results-container"
              hx-swap="outerHTML"
              hx-indicator="#run-indicator"
              hx-ext="json-enc">
            <div class="space-y-4">
                <div>
                    <label for="simulatedTimestamp" class="block text-sm font-medium text-gray-700 mb-1">
                        Simulated Time (optional)
                    </label>
                    <input
                        type="datetime-local"
                        id="simulatedTimestamp"
                        name="simulatedTimestamp"
                        class="block w-full max-w-md px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    />
                    <p class="mt-1 text-sm text-gray-500">
                        Leave empty to use current time, or set a future/past date to test cleanup behavior.
                    </p>
                </div>

                <button
                    type="submit"
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50"
                >
                    <span id="run-indicator" class="htmx-indicator mr-2">
                        <svg class="animate-spin h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </span>
                    Run Daily Tasks
                </button>
            </div>
        </form>
    </div>

    <!-- Results Container Partial -->
    {{> daily-tasks/_results }}
</div>
