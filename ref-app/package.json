{
  "name": "app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter frontend --filter backend --parallel dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "test": "pnpm --filter bdd-test test",
    "codegen": "pnpm --filter backend codegen",
    "db:try-migrate": "pnpm --filter backend db:try-migrate",
    "build": "pnpm --filter backend --filter frontend --parallel build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "install:all": "pnpm install",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "devDependencies": {
    "wrangler": "4.56.0",
    "tsx": "^4.21.0"
  }
}
